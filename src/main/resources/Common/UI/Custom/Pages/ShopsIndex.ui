$C = "../Common.ui";
$C.@PageOverlay {
  $C.@DecoratedContainer {
    Anchor: (Width: 600, Height: 669);

    #Title {
      Group {
        $C.@Title {
          Text: "Shops";
          Anchor: (Top: 4);
          Style: (RenderBold: true, RenderUppercase: true, HorizontalAlignment: Center, TextColor: #EE8349);
        }
      }
    }
    #Content {
      LayoutMode: Left;

      Group #Main {
        LayoutMode: Top;

        Group #IndexList {
          Anchor: (Width: 580);
          FlexWeight: 1;
          LayoutMode: TopScrolling;
          Padding: (Left: 4);
          ScrollbarStyle: $C.@DefaultScrollbarStyle;

          Group #IndexCards {
            LayoutMode: Top;
          }
        }
      }
    }
  }
}


