$C = "../Common.ui";

  $C.@PageOverlay {

  $C.@DecoratedContainer {
  Anchor: (Width: 1050, Height: 700);

  #Title {
  Group {

  $C.@Title #TitleProducts {
  Text: "Products";
  Anchor: (Top: 4);
  Style: (
  RenderBold: true,
  RenderUppercase: true,
  HorizontalAlignment: Center,
  TextColor: #EE8349
  );
  }

  // Si quieres buscador como en el template
  // $C.@HeaderSearch {}

  }
  }

  #Content {
  LayoutMode: Left;

  Group #Main {
  FlexWeight: 1;
  LayoutMode: TopScrolling;
  Padding: (Left: 10);
  ScrollbarStyle: $C.@DefaultScrollbarStyle;

  Group #IndexCards {
  LayoutMode: Top;
  }

  }
  }
  }

  // Bot√≥n de volver (opcional)
  $C.@BackButton {}
  }
